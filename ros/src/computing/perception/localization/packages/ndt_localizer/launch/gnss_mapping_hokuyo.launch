<launch>

  <!-- send table.xml to param server -->
  <arg name="parent_frame" default="map" />
  <arg name="child_frame" default="gps" />
  <arg name="points_topic" default="hokuyo_3d/hokuyo_cloud2" />
  <arg name="output_dir" default="/media/kitsukawa/ssd/12/hokuyo_gnss/csv/" />

  <node pkg="ndt_localizer" type="tf_mapping" name="gnss_mapping_hokuyo" output="screen">
    <param name="parent_frame" value="$(arg parent_frame)" />
    <param name="child_frame" value="$(arg child_frame)" />
    <param name="points_topic" value="$(arg points_topic)" />
    <param name="output_dir" value="$(arg output_dir)" />
  </node>
  
</launch>
